<project default="get.buildbase">
<!-- 
  BuildBase - ant+ivy based build system
  $Id: setup.xml 81 2009-12-10 13:18:35Z demakov $
  -->

  <target name="get.buildbase">
    <property name="buildbase.repo.url" value="http://forge.ispras.ru/repo"/>
    <property name="buildbase.repo.dir" value="buildbase/distributions"/>
    <property name="buildbase.basedir"  value="tools/buildbase"/>
    <property name="buildbase.file"     value="buildbase.zip"/>
    <property name="dir.buildbase.file" value="${buildbase.basedir}/${buildbase.file}"/>

    <mkdir dir="${buildbase.basedir}"/>
    <get src="${buildbase.repo.url}/${buildbase.repo.dir}/${buildbase.file}"
         dest="${dir.buildbase.file}"
         usetimestamp="true"/>
    <unzip src="${dir.buildbase.file}" 
           dest="${buildbase.basedir}"
           overwrite="false">
      <patternset>
        <include name="tools/buildbase/*"/>
      </patternset>
      <flattenmapper/>
    </unzip>
  </target>
</project>

